<div class="row">
    <div class="col-md-8">
        <h1 class="header-sub-heading"><%= @camp.name %></h1>
    </div>
</div>

<div class="row">

    <div class="col-md-8">

        <!-- Blueimp Gallery -->
        <div id="blueimp-gallery" class="blueimp-gallery">
            <div class="slides"></div>
            <h3 class="title"></h3>
            <a class="prev">‹</a>
            <a class="next">›</a>
            <a class="close">×</a>
            <a class="play-pause"></a>
            <ol class="indicator"></ol>
        </div>

        <div id="links">
            <% @camp.images.each_with_index do |image, index| %>
                <% status = "" %>
                <% if index == 0 %>
                    <% status = "active" %>
                <% end %>
                <% image_url = image.attachment.url(:original)%>

                <div class="thumbnail">
                    <a href="<%= image_url %>">
                        <img src="<%= image_url %>">
                    </a>
                </div>

            <% end %>

        </div>

        <% content_for(:head) do %>
            <% browser_title = @camp.name + " - " + t(:browser_title_tag) %>
            <title><%= browser_title %></title>
            <%= javascript_include_tag 'blueimp_script' %>
        <% end %>

        <!-- Creation text content -->
        <div class="camp-description">
            <b>Sammanfattning</b>
            <p><%= simple_format(@camp.subtitle) %></p>
        </div>

        <% if Rails.configuration.x.firestarter_settings["description"] and @camp.description != "" %>
            <div class="camp-description">
                <b><%=t :form_description_label %></b>
                <p><%= simple_format(@camp.description) %></p>
            </div>
        <% end %>

        <% if Rails.configuration.x.firestarter_settings["benefit"] and @camp.benefit != "" %>
            <div class="camp-description">
                <b><%=t :form_benefit_label %></b>
                <p><%= simple_format(@camp.benefit) %></p>
            </div>
        <% end %>

        <% if Rails.configuration.x.firestarter_settings["plan"] and @camp.plan != "" %>
            <div class="camp-description">
                <b><%=t :form_plan_label %></b>
                <p><%= simple_format(@camp.plan) %></p>
            </div>
        <% end %>

        <% if Rails.configuration.x.firestarter_settings["moop"] and @camp.moop != "" %>
            <div class="camp-description">
                <b><%=t :form_moop_label %></b>
                <p><%= simple_format(@camp.moop) %></p>
            </div>
        <% end %>

        <% if Rails.configuration.x.firestarter_settings["budgetplan"] and @camp.budgetplan != "" %>
            <div class="camp-description">
                <b><%=t :form_budgetplan_label %></b>
                <p><%= simple_format(@camp.budgetplan) %></p>
            </div>
        <% end %>

        <% if Rails.configuration.x.firestarter_settings["cocreation"] and @camp.cocreation != "" %>
            <div class="camp-description">
                <b><%=t :form_cocreation_label %></b>
                <p><%= simple_format(@camp.cocreation) %></p>
            </div>
        <% end %>

    </div> <!-- col-md-8 -->

    <div class="col-md-4">

        <% if !user_signed_in? and Rails.configuration.x.firestarter_settings["creation_sidebar_welcome"] %>
            <div class="panel panel-default">
                <div class="panel-heading"><%=t :what_is_this_title %></div>
                <div class="panel-body">
                    <p><%=t :what_is_this_text_html %></p>
                </div>
            </div>
        <% end %>

        <% random = Camp.order("RANDOM()").first %>
        <a href="<%= url_for(random) %>" class="btn btn-primary camp-button" role="button">
            Fler aktiviteter <span class="glyphicon glyphicon-random" aria-hidden="true"></span>
        </a>

        <div class="creation-info">
            <ul>

                <li><span><h2 class="header-sub-heading"><%=t :creation_info_headline %></h2></span></li>

                <% if current_user && (@camp.creator == current_user || current_user.admin) %>
                    <li><span>
                        <a href="<%= edit_camp_path(@camp) %>" class="btn btn-primary camp-button" role="btn button">Updatera aktivitet</a>
                    </li></span>
                    <li><span>
                        <a href="<%= camp_images_path(@camp) %>" class="btn btn-primary camp-button" role="btn button">Ladda upp bilder</a>
                    </li></span>
                <% end %>

                <br>

                <li><span><b>Kontaktperson:</b>  <br> <%= @camp.contact_name %></span></li>
                <br>

                <% if Rails.configuration.x.firestarter_settings["organizer"] and @camp.organizer != "" %>
                    <li><div><b>Arrangeras av:</b>  <br> <%= @camp.organizer %></div></li>
                    <br>
                <% end %>


                <li><span><b>Mail:</b>  <br> <%= @camp.contact_email %></span></li>
                 <br>

                <% if Rails.configuration.x.firestarter_settings["address"] and  @camp.address != "" %>
                    <li><div>
                        <b><%=t :form_address_label %></b> <br> <%= @camp.address %>
                    </div></li>


                    <br>
                <% end %>


                <% if Rails.configuration.x.firestarter_settings["time"] and  @camp.start_time != "" %>
                    <li><div>
                        <b><%=t :form_start_time_label %></b>  <br> <%= @camp.start_time %>
                    </div></li>


                    <br>
                <% end %>

                <% if Rails.configuration.x.firestarter_settings["marketing"] and @camp.facebook_link != "" %>
                    <div class="camp-description">
                        <% link = @camp.facebook_link %>
                        <% if(link[0,7] != "http://" && link[0,8] != "https://" ) %>
                            <% link = "http://" + link %>
                        <% end %>
                        <p><b><%= link_to("Facebook", link) %></b></p>
                    </div>
                <% end %>

                <% if Rails.configuration.x.firestarter_settings["marketing"] and @camp.twitter_link != "" %>
                    <div class="camp-description">
                        <% link = "http://twitter.com/" + @camp.twitter_link %>
                        <p><b><%= link_to("Twitter", link) %></b></p>
                    </div>
                <% end %>

                <% if Rails.configuration.x.firestarter_settings["marketing"] and @camp.instagram_link != "" %>
                    <div class="camp-description">
                        <% link = "http://www.instagram.com/" + @camp.instagram_link %>
                        <p><b><%= link_to("Instagram", link) %></b></p>
                    </div>
                <% end %>

                <% if Rails.configuration.x.firestarter_settings["marketing"] and @camp.video_link != "" %>
                    <div class="camp-description">
                        <% link = @camp.video_link %>
                        <% if(link[0,7] != "http://" && link[0,8] != "https://" ) %>
                            <% link = "http://" + link %>
                        <% end %>
                        <p><b><%= link_to("Videolänk", link) %></b></p>
                    </div>
                <% end %>

                <% if Rails.configuration.x.firestarter_settings["electricity"] and @camp.electricity != "" %>
                    <li><span>
                        <b><%=t :form_electricity_label %></b> <%= @camp.electricity %>
                    </span></li>


                    <br>
                <% end %>

                <% if Rails.configuration.x.firestarter_settings["light"] and  @camp.light != "" %>
                    <li><span>
                        <b><%=t :form_light_label %></b> <%= @camp.light %>
                    </span></li>


                    <br>
                <% end %>

                <% if Rails.configuration.x.firestarter_settings["fire"] and  @camp.fire != "" %>
                    <li><span>
                        <b><%=t :form_fire_label %></b> <%= @camp.fire %>
                    </span></li>


                    <br>
                <% end %>

                <% if Rails.configuration.x.firestarter_settings["noise"] and  @camp.noise != "" %>
                    <li><span>
                        <b><%=t :form_noise_label %></b> <%= @camp.noise %>
                    </span></li>


                    <br>
                <% end %>

                <% if Rails.configuration.x.firestarter_settings["nature"] and  @camp.nature != "" %>
                    <li><span>
                        <b><%=t :form_nature_label %></b> <%= @camp.nature %>
                    </span></li>


                    <br>
                <% end %>

                <% if Rails.configuration.x.firestarter_settings["grants"] and  @camp.minbudget != "" %>
                    <li><span>
                        <b><%=t :form_minigrants_label %></b> <%= @camp.minbudget %>
                    </span></li>
                <% end %>

                <% if Rails.configuration.x.firestarter_settings["grants"] and  @camp.maxbudget != "" %>
                    <li><span>
                        <b><%=t :form_maxigrants_label %></b> <%= @camp.maxbudget %>
                    </span></li>


                    <br>
                <% end %>

                <% if Rails.configuration.x.firestarter_settings["add_to_list"] %>
                    <br>
                    <% if @camp.creator != current_user %>
                        <li><b><%=t :cocreator_application_guidetext %></b></li>
                        <div class="join_creation">
                            <%= button_to "Add my name", {action: "join", user: current_user }, {class: 'btn btn-success button'} %>
                        </div>
                    <% end %>

                    <% if current_user && (@camp.creator == current_user || current_user.guide) %>
                        <br>
                        <li><span><b><%=t :cocreators_list_guidetext %></b>
                            <% @users.each do |user| %>
                                <%= user.email %><br>
                            <% end %>
                        </span></li>
                    <% end %>
                <% end %>

                <% if current_user && (@camp.creator == current_user || current_user.admin) %>
                    <%= form_for @camp, method: :delete do |f| %>
                        <%= f.submit 'Ta bort aktiviteten', class: "btn btn-danger" , data: { confirm: 'Är du säker på att du vill ta bort aktiviteten?' } %>
                    <% end %>
                <% end %>

            </ul>

        </div> <!-- creation-info -->

    </div> <!-- col-md-3 -->

</div> <!-- row -->
